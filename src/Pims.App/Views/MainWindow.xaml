<Window x:Class="Pims.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Pims Utility Hub"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <DockPanel Margin="20">
        <TextBlock Text="Utility Collections" FontSize="20" FontWeight="Bold" DockPanel.Dock="Top" Margin="0,0,0,16" />
        <ItemsControl ItemsSource="{Binding MenuDefinitions}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding DisplayName}"
                            Margin="0,0,0,12"
                            Padding="16,8"
                            Command="{Binding DataContext.OpenMenuCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</Window>
