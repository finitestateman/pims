<Window x:Class="Pims.App.Views.FtpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publish JAR to FTP"
        Height="250"
        Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
        <TextBlock Text="Local JAR" VerticalAlignment="Center" />
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <TextBox Width="240" Text="{Binding LocalFilePath, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Browse" Width="80" Command="{Binding BrowseCommand}" Margin="8,0,0,0" />
        </StackPanel>

        <TextBlock Text="FTP Directory" VerticalAlignment="Center" Grid.Row="1" Margin="0,12,0,0" />
        <TextBox Grid.Column="1" Grid.Row="1" Width="240" Text="{Binding FtpDirectory, UpdateSourceTrigger=PropertyChanged}" Margin="0,12,0,0" />

        <StackPanel Grid.ColumnSpan="2" Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
            <Button Content="Upload" Width="100" Command="{Binding UploadCommand}" />
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="12,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
