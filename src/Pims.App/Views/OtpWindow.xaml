<Window x:Class="Pims.App.Views.OtpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OTP Clipboard Helper"
        Height="200"
        Width="350"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Copy the latest OTP without opening email." TextWrapping="Wrap" Margin="0,0,0,12" />
        <Button Content="Fetch OTP" Command="{Binding CaptureCommand}" Padding="12,6" Margin="0,0,0,12" />
        <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" />
    </StackPanel>
</Window>
