<Window x:Class="Pims.App.Views.CredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credentials & Settings"
        Height="260"
        Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">
        <TextBlock Text="User ID" VerticalAlignment="Center" />
        <TextBox Grid.Column="1" Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="1" Text="Primary Password" VerticalAlignment="Center" Margin="0,12,0,0" />
        <PasswordBox Grid.Column="1" Grid.Row="1" Margin="0,12,0,0" Name="PrimaryPasswordBox" PasswordChanged="OnPrimaryPasswordChanged" />

        <TextBlock Grid.Row="2" Text="Secondary Password" VerticalAlignment="Center" Margin="0,12,0,0" />
        <PasswordBox Grid.Column="1" Grid.Row="2" Margin="0,12,0,0" Name="SecondaryPasswordBox" PasswordChanged="OnSecondaryPasswordChanged" />

        <StackPanel Grid.ColumnSpan="2" Grid.Row="3" Orientation="Horizontal" Spacing="12" Margin="0,20,0,0">
            <Button Content="Save" Width="100" Command="{Binding SaveCommand}" />
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
